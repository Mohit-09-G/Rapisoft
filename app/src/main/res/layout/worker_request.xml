<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <LinearLayout
            android:id="@+id/customer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client:"
                    style="@style/Subheading" />

                <TextView
                    android:id="@+id/client_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Worker Category"
                    style="@style/Body"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    style="@style/Subheading" />

                <TextView
                    android:id="@+id/status_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="example@email.com"
                    style="@style/Body" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request On: "
                    style="@style/Subheading" />

                <TextView
                    android:id="@+id/request_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="example@email.com"
                    style="@style/Body" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact: "
                    style="@style/Subheading" />

                <TextView
                    android:id="@+id/contact_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7018555555"
                    style="@style/Body"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_info"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/request_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept Request"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:background="@drawable/search_button"
                android:padding="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact Employer"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:background="@drawable/search_button"
                android:padding="8dp" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
